// factorial.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
void main()
{
	int i,n,p;
	p=1;
	do
	{
		cout<<"ingrese un numero";
		cin>>n;
	}
	while (n<0);

	for(i=1;i<=n;i++)
		p=p*i;
		cout<<"el producto es"<<p<<endl;
	getch();
}
