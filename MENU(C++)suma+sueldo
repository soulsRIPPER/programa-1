// menu.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define IVA 0.13
#define AFP 0.1271
using namespace std;

void main()
{
	int n,i;
	float sb,sn;
	int a, b, r, opcion;

	do {
		cout << endl;
		cout << "1.- suma" << endl;
		cout << "2.- sueldo" << endl;
		cout << "0.- Salir" << endl;
		cout << "Elige una opciÃ³n: " ;
		cin >> opcion;
		switch (opcion) {
		case 1: 
			{
				cout << "Ingrese a: " ;
				cin >> a;
				cout << "Ingrese b: " ;
				cin >> b;
				r = a + b; 
				cout << "El resultado es " << r << endl;
				break;
			}
		case 2:
			{
				cout<<"ingrese numero de empleados:";
				cin>>n;
				for (i=1;i<=n;i++)
				{
					cout<<"ingrese salario bruto";
					cin>>sb;
					if (sb>=7000)
						sn=sb-(IVA+AFP)*sb;
					else
						sn=sb-(AFP*sb);
					cout<<"el salario neto es:"<<sn <<endl;
				}
			}
		case 0: cout << "Salir";break;
		default: cout << "Opcion invalida" << endl;
		}
	} while (opcion != 0);
	getch();
}
